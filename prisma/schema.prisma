generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Sedes {
  id        String   @id @default(uuid())
  nome      String
  regiao    String
  endereco  String?
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sedes")
}

model Cargos {
  id        String   @id @default(uuid())
  nome      String
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("cargos")
}

model Graduacoes {
  id        String   @id @default(uuid())
  nome      String
  observacao String?
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("graduacoes")
}
